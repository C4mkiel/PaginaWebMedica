@model IEnumerable<MVCloginEstudioTest.Models.Pacientes>
@{
    ViewData["Title"] = "Index";
}

<h1>Registro pacientes</h1>

<p>
    <a asp-action="Create">Registrar paciente</a>
</p>
<div class="row">
    <div class="col-md-4">
        <form class="form-group">
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombrePaciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApellidoPaciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MotConsulta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consulta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Rut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombrePaciente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApellidoPaciente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MotConsulta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Consulta)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdPaciente }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.IdPaciente }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdPaciente })
                </td>
            </tr>
        }
    </tbody>
</table>
