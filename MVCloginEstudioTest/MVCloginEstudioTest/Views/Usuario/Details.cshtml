@model MVCloginEstudioTest.Models.Usuario



@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rut)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rut)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombrePaciente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombrePaciente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CorreoUsuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CorreoUsuario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contraseña)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contraseña)
        </dd>
    </dl>
</div>
@if (Model.Rut == "1111")
{
    <h2>Medicamentos</h2>

    <table class="table">
        <thead>
        <th>Nombre Receta</th>
        <th>Comentario</th>
        <th>Fecha receta</th>
        <th>Medicamento</th>
        <th>Edad paciente</th>
        </thead>
        <tbody>
            @foreach (var item in Model.Recetas)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.RecetaMedicaNombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.ComentarioReceta)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaReceta)</td>
                    <td>@Html.DisplayFor(modelItem => item.Medicamento)</td>
                    <td>@Html.DisplayFor(modelItem => item.EdadPaciente)</td>
                </tr>
            }
        </tbody>
    </table>

}
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdPaciente}) |
    <a asp-action="Index">Volver atras</a>
</div>
