@model MVCProyectoClase.Models.MedicamentoViewModel

@{
    ViewData["Title"] = "Create";
}

<h4>Medicamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="IdReceta"/>

            <div class="form-group">
                <label asp-for="Medicamento.Nombre" class="control-label"></label>
                <input asp-for="Medicamento.Nombre" class="form-control" />
                <span asp-validation-for="Medicamento.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicamento.Cantidad" class="control-label"></label>
                <input asp-for="Medicamento.Cantidad" class="form-control" />
                <span asp-validation-for="Medicamento.Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicamento.Comprimido" class="control-label"></label>
                <input asp-for="Medicamento.Comprimido" class="form-control" />
                <span asp-validation-for="Medicamento.Comprimido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicamento.HoraConsumo" class="control-label"></label>
                <input asp-for="Medicamento.HoraConsumo" class="form-control" />
                <span asp-validation-for="Medicamento.HoraConsumo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicamento.TiempoConsumo" class="control-label"></label>
                <input asp-for="Medicamento.TiempoConsumo" class="form-control" />
                <span asp-validation-for="Medicamento.TiempoConsumo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
