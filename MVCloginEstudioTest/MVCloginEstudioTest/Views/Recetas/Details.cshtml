@model MVCProyectoClase.Models.Recetas

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles receta</h1>

<div>
    <h4>Receta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecetaMedicaNombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecetaMedicaNombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RutPaciente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RutPaciente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombrePaciente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombrePaciente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EdadPaciente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EdadPaciente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DomicilioPaciente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DomicilioPaciente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaReceta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaReceta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ComentarioReceta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ComentarioReceta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreDoctor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreDoctor)
        </dd>
    </dl>
</div>

@if (Model.Medicamento != null)
{
    <h2>Medicamentos</h2>

    <table class="table">
        <thead>
        <th>Nombre</th>
        <th>Cantidad</th>
        <th>Comprimido</th>
        <th>Hora Consumo</th>
        <th>Tiempo Consumo</th>
        </thead>
        <tbody>
            @foreach (var item in Model.Medicamento)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Comprimido)</td>
                    <td>@Html.DisplayFor(modelItem => item.HoraConsumo)</td>
                    <td>@Html.DisplayFor(modelItem => item.TiempoConsumo)</td>
                </tr>
            }
        </tbody>
    </table>

}

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
